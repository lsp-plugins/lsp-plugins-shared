<?xml version="1.0"?>

<window ui:inject="PresetsDialog" title="Presets">
	<hbox spacing="25">
		<!-- Packs -->
		<vbox width="128" fill="false" valign="-1" bg.color="bg_schema" >
			<label text="Packs" />
			<button hexpand="true" fill="true" text="Factory" bg.color="button_red" />
		</vbox>

		<!-- Presets -->
		<vbox width="128" fill="true" bg.color="bg_schema" >
			<label text="Presets" />
			<ui:for id="i" first="0" last="10">
				<button hexpand="true" fill="true" text="Preset ${i}" />
			</ui:for>
		</vbox>

		<!-- Actions -->
		<vbox>
			<label text="Actions" />
			<ui:with halign="-1">
				<button text="Create" ui:id="trg_presets_menu" />
				<button text="Save" />
				<button text="Load" />
				<label text="---" />
				<button text="Import from file" ui:id="trg_load_menu" />
				<button text="Import from clipboard" />
				<button text="Import *.REW" />
				<label text="---" />
				<button text="Export to file" ui:id="trg_save_menu" />
				<button text="Export to clipboard" />
			</ui:with>
		</vbox>
	</hbox>
</window>
