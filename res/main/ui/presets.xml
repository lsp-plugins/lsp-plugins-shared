<?xml version="1.0"?>

<window ui:inject="PresetsDialog" title="Presets">
	<hbox spacing="25">
		<!-- Packs -->
		<vbox width="128" fill="false" valign="-1" bg.color="bg_schema" >
			<label text="Packs" />
			<button hexpand="true" fill="true" text="Factory" bg.color="button_red" />
		</vbox>

		<!-- Presets -->
		<vbox width="128" fill="true" bg.color="bg_schema" >
			<label text="Presets" />
			<ui:for id="i" first="0" last="10">
				<button hexpand="true" fill="true" text="Preset ${i}" />
			</ui:for>
		</vbox>

		<!-- Actions -->
		<vbox>
			<label text="Actions" />
			<hbox>
				<button text="Create" ui:id="trg_presets_menu" />
				<button text="Save" />
				<button text="Load" />
			</hbox>
			<label text="---" />
			<label text="Import from ..." />
			<hbox>
				<button text="file" ui:id="trg_load_menu" />
				<button text="clipboard" />
				<button text="*.REW" />
			</hbox>
			<label text="---" />
			<label text="Export to ..." />
			<hbox>
				<button text="file" ui:id="trg_save_menu" />
				<button text="clipboard" />
			</hbox>
		</vbox>
	</hbox>
</window>
