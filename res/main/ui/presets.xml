<?xml version="1.0"?>

<window ui:inject="PresetsDialog" title="Presets" fill="true">
	<hbox spacing="25">
		<!-- Packs -->
		<group ipadding="0" expand="true" fill="true" text="Packs">
			<vbox width="128" fill="false" valign="-1" bg.color="bg_schema" >
				<button hexpand="true" fill="true" text="Factory" bg.color="button_blue" />
				<button hexpand="true" fill="true" text="User" bg.color="button_blue" />
			</vbox>
		</group>

		<!-- Presets -->

		<group ipadding="0" expand="true" fill="true" text="Presets">
			<vbox width="128" fill="true" bg.color="bg_schema" >
				<list ui:id="presets_list" />
			</vbox>
		</group>

		<!-- Actions -->
		<vbox>
			<label text="Actions" />
			<hbox>
				<button text="Create" ui:id="trg_presets_menu" />
				<button text="Save" />
				<button text="Load" />
			</hbox>
			<label text="---" />
			<label text="Import from ..." />
			<hbox>
				<button text="file" ui:id="trg_load_menu" />
				<button text="clipboard" />
				<button text="*.REW" />
			</hbox>
			<label text="---" />
			<label text="Export to ..." />
			<hbox>
				<button text="file" ui:id="trg_save_menu" />
				<button text="clipboard" />
			</hbox>
		</vbox>
	</hbox>
</window>
