<?xml version="1.0"?>

<window ui:inject="PresetsDialog" title="Presets" fill="true">
	<hbox spacing="15" padding="5" width="600" height="256" padding.top="20" padding.bottom="10">
		<!-- Presets -->

		<vbox>
			<group ipadding="0" expand="true" fill="true" width.min="300" width="400" text="Presets" text.show="false">
				<vbox>
					<hbox bg.color="bg_schema_name" hexpand="true" height="28" padding.left="10" padding.right="10">
						<align halign="-1">
							<label text="Presets" />
						</align>
						<void hexpand="true" />
						<button text=" o " ui:id="trg_refresh" ui:inject="Button_cyan" />
					</hbox>
					<vbox fill="true" expand="true" bg.color="red">
						<list ui:id="presets_list" fill="true" />
					</vbox>
				</vbox>
			</group>

			<hbox hexpand="true" height="28" border.color="bg_schema_name" border.size="1">
				<edit ui:id="preset_filter" text="Search..." padding.left="5" padding.right="5" />
			</hbox>
		</vbox>

		<!-- Actions -->
		<vbox spacing="15" width.max="128">
			<vbox spacing="5" hexpand="true">
				<button fill="true" text="New" ui:id="btn_new" />
				<button fill="true" text="Delete" text.color="dark_red" ui:id="btn_delete" />
				<button fill="true" text="Override" ui:id="btn_override" />
			</vbox>

			<hbox spacing="5" hexpand="true">
				<button fill="true" text="Import..." ui:id="btn_import" />
				<button fill="true" text="Export..." ui:id="btn_export" />
			</hbox>

			<hbox spacing="5" hexpand="true">
				<button fill="true" text="Copy state" ui:id="btn_copy" />
				<button fill="true" text="Paste state"  ui:id="btn_paste" />
			</hbox>
		</vbox>
	</hbox>
</window>
